{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'farmer-school-bevy'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=farmer-school-bevy",
                    "--package=farmer-school-bevy",
                    // "--features=bevy/dynamic_linking",
                ],
                "filter": {
                    "name": "farmer-school-bevy",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1",
                // "SEASON_SCHOLARS_DEV": "whatever",
                "SEASON_SCHOLARS_DEV_ASSETS": "whatever",
                // "SEASON_SCHOLARS_DEV_PORTAL_HEALTH": "4",
                // "SEASON_SCHOLARS_DEV_STUDENT_NOT_EATING": "whatever",
                // "SEASON_SCHOLARS_DEV_NO_SEASON_MONSTER": "whatever",
                "RUST_LOG": "warn,farmer_school_bevy=debug,bevy_diagnostic=trace",
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${workspaceFolder}/target/debug",
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'farmer-school-bevy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=farmer-school-bevy",
                    "--package=farmer-school-bevy"
                ],
                "filter": {
                    "name": "farmer-school-bevy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}